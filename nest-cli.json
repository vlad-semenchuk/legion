{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/legion/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/legion/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/legion",
  "projects": {
    "achievements": {
      "type": "application",
      "root": "apps/achievements",
      "entryFile": "main",
      "sourceRoot": "apps/achievements/src",
      "compilerOptions": {
        "tsConfigPath": "apps/achievements/tsconfig.app.json",
        "assets": ["assets/**/*"]
      }
    },
    "core": {
      "type": "library",
      "root": "libs/core",
      "entryFile": "index",
      "sourceRoot": "libs/core/src",
      "compilerOptions": {
        "tsConfigPath": "libs/core/tsconfig.lib.json"
      }
    },
    "database": {
      "type": "library",
      "root": "libs/database",
      "entryFile": "index",
      "sourceRoot": "libs/database/src",
      "compilerOptions": {
        "tsConfigPath": "libs/database/tsconfig.lib.json"
      }
    },
    "legion": {
      "type": "application",
      "root": "apps/legion",
      "entryFile": "main",
      "sourceRoot": "apps/legion/src",
      "compilerOptions": {
        "tsConfigPath": "apps/legion/tsconfig.app.json"
      }
    }
  }
}
